# peso_kg = input('Qual o seu peso (em KG)? ')
# peso_lb = int(peso_kg) * 2.205
# print('Em libras, seu peso é '+ str(peso_lb) + ' lb')

peso = int(input('Digite seu peso:'))
unidade = input('O valor dado é em (L)bs ou (K)g? ')

if unidade.upper() == 'L':
    peso_convertido = peso//2.205
    print(f"Seu peso em Kg é {peso_convertido} Kg")
else:
    peso_convertido = peso*2.205
    print(f"Seu peso em Lb é {peso_convertido} Lbs")
